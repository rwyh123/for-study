<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Salon.Views.RegisterView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="50 ,50">
            <Image Source="xamarin_logo.png" />
            <Entry  x:Name="Login" Placeholder="Логин"/>
            <Entry  x:Name="Password" Placeholder="Пароль"/>
            <Entry  x:Name="PasswordConfirm" Placeholder="Повторите пароль"/>
            <Entry  x:Name="SalonName" Placeholder="Название салона"/>
            <Entry  x:Name="Adress" Placeholder="Адресс"/>
            <Entry  x:Name="WorkTime" Placeholder="Рабочее время"/>
            <Entry  x:Name="ManegersFullName" Placeholder="Фио мэнеджера"/>
            <Label Text="error message"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Войти"/>
                <Button Text="Регистрация"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>